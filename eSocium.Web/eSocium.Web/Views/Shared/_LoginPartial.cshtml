@if (Request.IsAuthenticated) {
    <p>
        Здравствуйте, <b>@User.Identity.Name</b>!
        @Html.ActionLink("Выход", "LogOff", "Account")
    </p>
} else {
    <ul>
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", data_dialog_title = "Registration" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", data_dialog_title = "Identification" })</li>
    </ul>
}